{
  "name": "kitlib",
  "private": true,
  "scripts": {
    "build": "gulp build --dist node_modules/@kitlib",
    "post:build": "gulp move",
    "pre:release": "gulp copy-misc && gulp build --dist node_modules/@kitlib",
    "build:prd": "gulp build",
    "publish": "npm run pre:release && npm run build:prd && ./node_modules/.bin/lerna publish --force-publish --exact -m \"chore(@kitlib) publish %s release\"",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "babel-jest": "^27.5.1",
    "cli-color": "^2.0.2",
    "delete-empty": "^3.0.0",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "jest": "^27.5.1",
    "lerna": "^4.0.0",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}
